<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/psychologist_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mood1"
            app:civ_border_width="2dp"
            app:civ_border_color="#E0E0E0"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/psychologist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doç. Dr. Ayşe Yılmaz"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/psychologist_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klinik Psikolog, Yetişkin Terapisti"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/psychologist_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bilişsel Davranışçı Terapi (BDT) ve Şema Terapi odaklı çalışmaktadır."
                android:textColor="#616161"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>